import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        String a = sc.nextLine();

        int starCount = 0, hashCount = 0;

        for (int i = 0; i < a.length(); i++) {
            if (a.charAt(i) == '*') {
                starCount++;
            } else if (a.charAt(i) == '#') {
                hashCount++;
            }
        }

        int difference = Math.abs(starCount - hashCount);

        if (starCount == hashCount) {
            System.out.println("0");
        } else {
            String formattedDiff;
            if (difference < 10) {
                formattedDiff = String.format("%02d", difference); 
            } else {
                formattedDiff = String.format("%03d", difference); 
            }

            System.out.println("The Difference of the character in the given string: " + formattedDiff);
        }
    }
}
